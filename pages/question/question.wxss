/* pages/question/question.wxss */
page {
  padding-bottom: 220rpx;
}

.nav {
  display: flex;
  justify-content: space-between;
  width: calc(90% - 40rpx);
  height: 80rpx;
  margin: 20rpx auto;
  padding: 0 20rpx;
  background-color: #006ec5;
  border-radius: 20rpx;
  color: #fff;
  align-items: center;
  font-size: 20rpx;
}

.picker {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.picker text {
  font-size: 24rpx;
}

.picker image {
  width: 30rpx;
  height: 30rpx;
}


.description {
  width: 90%;
  margin: 0 auto;
  color: #9999A6;
}

.item-wrapper {
  width: 100%;
  margin-top: 30rpx;
  min-height: 80rpx;
  border: 2rpx solid #DCDCDC;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  background-color: #fff;
  color: #979797;
}
.item-wrapper.image-panel {
  height: inherit;
}
.two-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.item-wrapper.half-line {
  display: inline-flex;
  width: calc(50% - 10rpx);
}

.item-wrapper .label {
  width: 160rpx;
  font-size: 32rpx;
  border-right: 2rpx solid #DCDCDC;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-wrapper .input {
  padding: 10rpx 20rpx;
  width: calc(100% - 200rpx);
  flex: 3;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.item-wrapper .input textarea {
  display: inline-block;
  height: 80rpx;
  width: 100%;
}
.item-wrapper .input textarea.high {
  height: 120rpx;
}
.item-wrapper .input text {
  display: inline-block;
  word-wrap: break-word; 
  word-break: normal;
  width: 100%;
}
.item-wrapper .input picker {
  width: 100%;
  height: 100%;
}
.item-wrapper .input picker .picker {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.item-wrapper .input picker .picker image {
  width: 50rpx;
  height: 40rpx;
}

.item-wrapper .input .btn-speak image {
  width: 50rpx;
  height: 50rpx;
}

.item-wrapper .img-preview-container image {
  width: 120rpx;
  height: 120rpx;
}
.item-wrapper .img-preview-container image.upload-icon {
  width: 60rpx;
  height: 60rpx;
}

.img-upload-container {
  width: 100%;
  vertical-align: top;
}

.img-upload-container view {
  display: inline-block;
  vertical-align: top;
  width: 120rpx;
  height: 120rpx;
}

.img-upload-container .img-preview {
  width: 100%;
  height: 100%;
}

.img-upload-container .img-preview-container {
  position: relative;
  padding: 20rpx;
}

.img-upload-container .img-preview-container .img-close {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 15rpx;
  top: 15rpx;
}

.content-container .img-upload {
  display: inline-block;
}


.btn-wrapper {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}

.btn-wrapper button {
  padding: 0;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  font-weight: normal;
  font-size: 36rpx;
}

.btn-wrapper button:nth-child(2),
.btn-wrapper button:nth-child(3) {
  border-left: gray solid 1rpx;
}

.btn-wrapper button image {
  width: 36rpx;
  height: 36rpx;
}

/* 问题回复 */
.comment-wrapper {
  width: 90%;
  margin: 50rpx auto;
}

.comment-wrapper .label {
  font-size: 32rpx;
}

.comment-list {
  width: 90%;
  margin: 20rpx auto;
  font-size: 28rpx;
}

.comment-list .comment-item {
  margin-top: 20rpx;
  padding: 5rpx 10rpx;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #87CEFA;
  border-radius: 10rpx;
}

.comment-list .comment-item text {
  display: inline-block;
  width: 50%;
  color: #9999A6;
}

.comment-list .comment-item .content {
  font-size: 36rpx;
  width: 100%;
  color: #4876FF;
}