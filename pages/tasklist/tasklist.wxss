/* pages/tasklist/tasklist.wxss */
.nav {
  display: flex;
  justify-content: space-between;
  width: calc(95% - 40rpx);
  height: 80rpx;
  margin: 20rpx auto;
  padding: 0 20rpx;
  background-color: #4876FF;
  border-radius: 20rpx;
  color: #fff;
  align-items: center;
  font-size: 20rpx;
}

.date-filter {
  display: flex;
  width: calc(95% - 40rpx);
  height: 80rpx;
  margin: 20rpx auto;
  padding: 0 20rpx;
  background-color: #4876FF;
  border-radius: 20rpx;
  color: #fff;
  align-items: center;
  justify-content: space-between;
  font-size: 20rpx;
}

.task-list {
  width: 90%;
  margin: 0 auto;
}

.item-wrapper {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.task-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 10rpx 30rpx;
  border: 1rpx solid #EAE7E8;
  border-radius: 10rpx;
}

.task-item view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.task-item view.title text {
  display: inline-block;
  flex: 8;
}

.task-item view.title text:nth-child(2),
.task-item view.title text:nth-child(3) {
  margin-left: 5rpx;
  font-weight: bold;
  font-size: 24rpx;
  height: 40rpx;
  width: 100rpx;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.task-item view:nth-child(2n) {
  margin-top: 20rpx;
}

.task-item view.note {
  font-size: 24rpx;
}

.picker {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.picker text {
  font-size: 24rpx;
}

.picker image {
  width: 30rpx;
  height: 30rpx;
}

