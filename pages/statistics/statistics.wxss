.swiper-tab {
	width: 100%;
	border-bottom: 2rpx solid #777777;
	text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
	width: 50%;
	color: #777777;
}

.on {
  color: #4876FF;
  border-bottom: 5rpx solid #4876FF;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 98%;
  margin: 0 auto;
  overflow: hidden;
}

.swiper-box view {
	text-align: center;
}

.common-filter,
.date-filter {
  display: flex;
  width: calc(95% - 40rpx);
  height: 80rpx;
  margin: 20rpx auto;
  padding: 0 20rpx;
  background-color: #4876FF;
  border-radius: 20rpx;
  color: #fff;
  align-items: center;
  justify-content: space-between;
  font-size: 20rpx;
}

.opt-wrapper {
  height: 50rpx;
  width: 50rpx;
  align-items: center;
  justify-content: center;
}

.opt-wrapper image {
  height: 50rpx;
  width: 50rpx;
}

.picker {
  flex-direction: row;
}

.picker text {
  font-size: 24rpx;
}

.picker image {
  width: 30rpx;
  height: 30rpx;
}

.user-filter {
  display: flex;
  width: calc(30% - 5rpx);
  height: 80rpx;
  margin-left: 5rpx;
  background-color: #EAE7E8;
  align-items: center;
  justify-content: center;
}

.user-filter image {
  width: 50rpx;
  height: 50rpx;
}

.item-detail {
  display: flex;
  width: 100%;
  height: 120rpx;
  margin-top: 10rpx;
  background-color: #EAE7E8;
}

.item-detail .img-wrapper {
  width: 10%;
  height: 100%;
  align-items: center;
  justify-content: center;
  align-content: center;
  text-align: center;
}

.item-detail .img-wrapper image {
  width: 38rpx;
  height: 70rpx;
}

.item-detail .info-wrapper {
  display: flex;
  flex-direction: row;
  width: 90%;
  font-size: 24rpx;
}

.item-detail .info-wrapper view {
  display: flex;
  flex: 1;
  /* text-align: left; */
  align-items: center;
  justify-content: space-between;
  align-content: center;
  text-align: center;
}

.item-detail .info-wrapper view image {
  width: 25rpx;
  height: 25rpx;
}

.item-detail .info-wrapper view.text-center {
  justify-content: center;
}

.item-detail .info-wrapper view.flex-more {
  flex: 1.5;
}

.item-detail .info-wrapper view.flex-big {
  flex: 2;
}

