.nav {
  position: relative;
  display: flex;
  justify-content: space-between;
  width: calc(90% - 40rpx);
  height: 80rpx;
  margin: 20rpx auto;
  padding: 0 20rpx;
  background-color: #006ec5;
  border-radius: 20rpx;
  color: #fff;
  align-items: center;
  font-size: 20rpx;
}

.picker {
  flex-direction: row;
}

.picker text {
  font-size: 24rpx;
}

.picker image {
  width: 30rpx;
  height: 30rpx;
}

.swiper-wrapper {
  position: absolute;
  bottom: 0;
  width: calc(100% - 40rpx);
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.swiper-wrapper .swiper {
  text-align: center;
  font-weight: bold;
  font-size: 28rpx;
  width: calc(25% - 5rpx);
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.swiper-wrapper .swiper.active {
  background-color: #fff;
  color: #006ec5;
}
.swiper-wrapper .swiper.inactive {
  background-color: #b6d9ef;
  color: #000;
}


.canvas {
  position: relative;
  width: 100%;
  min-height: 1000rpx;
}
.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.container.hide {
  display: none;
}
.container.show {
  display: block;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.menu-wrapper {
  position: absolute;
  bottom: 20%;
  left: 5%;
  width: 90%;
  display: flex;
  flex-direction: row;
}

.menu-wrapper .btn-menu {
  flex: 1;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  text-align: center;
  border-radius: 10rpx;
}
.menu-wrapper .btn-menu.inactive {
  background-color: gray;
  color: #fff;
}
.menu-wrapper .btn-menu.active {
  background-color: rgba(0, 0, 0, 0);
  color: #000;
}

.image {
  margin: 20rpx auto;
  width: 200rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  background-color: #006ec5;
  color: #fff;
}

.image image {
  width: 50rpx;
  height: 50rpx;
}

.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color: rgba(153,153,153,0.6);
  z-index:9999;
  top:0;
  left:0;
}
