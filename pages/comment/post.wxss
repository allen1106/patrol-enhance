/* pages/comment/post.wxss */
.nav {
  display: flex;
  justify-content: space-between;
  width: calc(90% - 40rpx);
  height: 80rpx;
  margin: 20rpx auto;
  padding: 0 20rpx;
  background-color: #006ec5;
  border-radius: 20rpx;
  color: #fff;
  align-items: center;
  font-size: 20rpx;
}
.nav view {
  width: 100%;
  height: 100%;
}
.nav view picker {
  width: 100%;
  height: 100%;
}
.nav view .picker {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.nav view .picker text {
  font-size: 24rpx;
}
.nav view .picker image {
  width: 30rpx;
  height: 30rpx;
}


.description {
  width: 90%;
  margin: 0 auto;
  color: #9999A6;
}

.item-wrapper {
  margin-top: 30rpx;
  height: 80rpx;
  border: 2rpx solid #DCDCDC;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  color: #979797;
}

.item-wrapper .label {
  flex: 1;
  font-size: 32rpx;
  border-right: 2rpx solid #DCDCDC;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-wrapper .input {
  padding: 10rpx 20rpx;
  flex: 3;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.item-wrapper .input textarea {
  display: inline-block;
  height: 100%;
  width: 100%;
}
.item-wrapper .input input {
  display: inline-block;
  word-wrap: break-word; 
  word-break: normal;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.item-wrapper .input picker {
  width: 100%;
  height: 100%;
}
.item-wrapper .input picker .picker {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.item-wrapper .input picker .picker text {
  font-size: 28rpx;
}
.item-wrapper .input picker .picker image {
  width: 40rpx;
  height: 40rpx;
}

.item-wrapper .input .btn-speak image {
  width: 50rpx;
  height: 50rpx;
}

.item-wrapper .img-preview-container image {
  width: 120rpx;
  height: 120rpx;
}
.item-wrapper .img-preview-container image.upload-icon {
  width: 60rpx;
  height: 60rpx;
}

.btn-wrapper {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}

.btn-wrapper button {
  padding: 0;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  font-weight: normal;
  font-size: 36rpx;
}

.btn-logout {
  border-left: gray solid 1rpx;
}

.btn-wrapper button image {
  width: 36rpx;
  height: 36rpx;
}
